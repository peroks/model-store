{
	"name": "peroks/model-store",
	"description": "Model Store: Permanent data store for models.",
	"license": "MIT",
	"type": "library",
	"version": "1.0.0",
	"keywords": [
		"json",
		"database",
		"pdo",
		"persistent-storage",
		"pdo-mysql",
		"mysql",
		"mysqli"
	],
	"authors": [
		{
			"name": "Per Egil Roksvaag",
			"homepage": "https://github.com/peroks"
		}
	],
	"require": {
		"php": ">=8.1",
		"peroks/model": "^2.0.0"
	},
	"require-dev": {
		"ergebnis/composer-normalize": "^2.45.0",
		"wp-coding-standards/wpcs": "^3.1.0"
	},
	"suggest": {
		"ext-intl": "*",
		"ext-mysqli": "Required for native MySQL model stores",
		"ext-pdo": "Required for PDO model stores"
	},
	"repositories": {
		"development": {
			"type": "path",
			"url": "../*",
			"canonical": false,
			"symlink": true
		}
	},
	"minimum-stability": "stable",
	"autoload": {
		"psr-4": {
			"Peroks\\Model\\Store\\": "src/"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"ergebnis/composer-normalize": true
		}
	},
	"scripts": {
		"build": [
			"@composer install"
		],
		"build-for-deploy": [
			"@composer install --no-dev"
		],
		"format": [
			"./vendor/bin/phpcbf ./src"
		],
		"lint": [
			"./vendor/bin/phpcs ./src"
		],
		"normalize": [
			"@composer normalize"
		]
	}
}
